<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/borde_card"
        android:padding="16dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Rese単as"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:textStyle="bold" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mis Libros"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp" />


        <EditText
            android:id="@+id/editTextResena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Rese単a del libro seleccionado"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:backgroundTint="@"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text" />


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/darker_gray" />


        <EditText
            android:id="@+id/editTextAgregarResena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Agrega una rese単a al libro"
            android:inputType="textMultiLine"
            android:minLines="3"
            android:gravity="top|start"
            android:background="@android:drawable/edit_text" />


        <Button
            android:id="@+id/buttonAgregarResena"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Agregar rese単a" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
