<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="8dp">                           >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/borde_card">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Rese単as"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:layout_gravity="center"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mis Libros"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:layout_marginTop="16dp" />

            <EditText
                android:id="@+id/editTextResena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Rese単a del libro seleccionado"
                android:inputType="textMultiLine"
                android:minLines="3"
                android:textColor="@color/black"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="16dp"
                android:background="@android:color/darker_gray" />

            <EditText
                android:id="@+id/editTextAgregarResena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="Agrega una rese単a al libro"
                android:inputType="textMultiLine"
                android:textColor="@color/black"
                android:minLines="3"
                android:gravity="top|start"
                android:background="@android:drawable/edit_text" />

            <Button
                android:id="@+id/buttonAgregarResena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textColor="@color/white"
                android:backgroundTint="@color/azul_electrico"
                android:text="Agregar rese単a" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
