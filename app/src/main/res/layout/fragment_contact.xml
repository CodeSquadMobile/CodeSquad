<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"

    android:background="@drawable/fondo2" android:layout_height="match_parent">


    <!-- Título de contacto -->

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etAsunto"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/nombre"
        android:inputType="textPersonName"
        android:textColor="@color/crim"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etAsunto"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvContactoTitulo"
        android:layout_alignParentStart="true"

        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/asunto"
        android:inputType="text"
        android:textColor="@color/crim"
        android:textColorHint="@color/black" />

    <EditText
        android:id="@+id/etEmail"
        android:layout_width="353dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etNombre"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"

        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/Email"
        android:inputType="textEmailAddress"
        android:textColor="@color/crim"
        android:textColorHint="@color/black" />

    <TextView
        android:id="@+id/tvContactoTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/Contact"
        android:textColor="@color/crim"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <!-- Saludo personalizado -->

    <!-- Cuadro de input para la consulta -->

    <!-- Botón para enviar la consulta -->

    <EditText
        android:id="@+id/etConsulta"
        android:layout_width="353dp"
        android:layout_height="wrap_content"

        android:layout_below="@+id/etEmail"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:hint="@string/consulta_hint"
        android:inputType="text"
        android:textColor="@color/crim"
        android:textColorHint="@color/black"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btnEnviarConsulta"
        android:text="@string/enviar"
        android:layout_width="266dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/etConsulta"
        android:textColor="@color/crim"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentStart="true"
        android:layout_marginStart="67dp"
        android:layout_marginTop="118dp"/>


</RelativeLayout>
