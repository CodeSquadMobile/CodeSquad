<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/manos"
    android:padding="40dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvFinalizarCompra"
        android:layout_width="318dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="26dp"
        android:text="@string/titTable"
        android:textAlignment="center"
        android:textColor="@color/crim"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Tabla de resumen de compra -->
    <TableLayout
        android:id="@+id/tableOverview"
        android:layout_width="wrap_content"
        android:layout_height="267dp"
        android:layout_above="@+id/button4"
        android:layout_below="@id/tvFinalizarCompra"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="166dp"
        android:stretchColumns="1"
        android:textColor="@color/crim">

        <!-- Cabecera de la tabla -->
        <TableRow
            android:layout_width="325dp"
            android:layout_height="56dp">

            <TextView
                android:layout_width="83dp"
                android:layout_height="match_parent"
                android:text="@string/FirCol"
                android:textAlignment="center"
                android:textColor="@color/crim"
                android:textStyle="bold" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="@string/SecCol"
                android:textAlignment="center"
                android:textColor="@color/crim"
                android:textStyle="bold" />

            <TextView
                android:layout_width="75dp"
                android:layout_height="match_parent"
                android:text="@string/ThiCol"
                android:textAlignment="center"
                android:textColor="@color/crim"
                android:textStyle="bold" />
        </TableRow>

        <!-- Aquí irán las filas de los libros (dinámicas en Java) -->
    </TableLayout>

    <Button
        android:id="@+id/button4"
        android:textColor="@color/crim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnfin"
        android:background="?attr/selectableItemBackground"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp" />

</RelativeLayout>