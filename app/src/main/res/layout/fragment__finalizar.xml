<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo2"
    android:padding="20dp">

    <!-- Título -->
    <TextView
        android:id="@+id/tvFinalizarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/titTable"
        android:gravity="center"
        android:textColor="@color/crim"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Tabla de resumen de compra -->
    <TableLayout
        android:id="@+id/tableOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:stretchColumns="1"
        android:background="@drawable/border"
        android:textColor="@color/crim">

        <!-- Cabecera de la tabla -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/FirCol"
                android:gravity="center"
                android:textColor="@color/crim"
                android:textStyle="bold"
                android:background="@drawable/border" /> <!-- Borde para la primera celda -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/SecCol"
                android:gravity="center"
                android:textColor="@color/crim"
                android:textStyle="bold"
                android:background="@drawable/border" /> <!-- Borde para la segunda celda -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ThiCol"
                android:gravity="center"
                android:textColor="@color/crim"
                android:textStyle="bold"
                android:background="@drawable/border" /> <!-- Borde para la tercera celda -->
        </TableRow>

        <!-- Aquí irán las filas de los libros (dinámicas en Java) -->

    </TableLayout>

    <!-- Totales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">



    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:textColor="@color/crim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnfin"
        android:background="?attr/selectableItemBackground"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="20dp" />

</LinearLayout>