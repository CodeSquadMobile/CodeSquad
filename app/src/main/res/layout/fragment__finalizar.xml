<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/fondo2"
    android:padding="50dp">


    <!-- Título -->
    <TextView
        android:id="@+id/tvFinalizarCompra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="70dp"

        android:layout_marginEnd="70dp"



    <!-- Tabla de resumen de compra -->
    <TableLayout
        android:id="@+id/tableOverview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:textColor="@color/black"
        android:layout_above="@+id/button4"
        android:layout_below="@id/tvFinalizarCompra"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="303dp"
        android:background="@color/white"

        android:stretchColumns="1">



        <!-- Cabecera de la tabla -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="56dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/FirCol"

                android:textAlignment="center"
                android:textColor="@color/black"

                android:textStyle="bold"
                android:background="@drawable/border" /> <!-- Borde para la primera celda -->

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/SecCol"

                android:textAlignment="center"
                android:textColor="@color/black"
                android:textStyle="bold" />


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/ThiCol"

                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold" />
        </TableRow>

        <!-- Aquí irían las filas de los libros (dinámicas en Java) -->
        <!-- Ejemplos de filas -->
        <TableRow
            android:layout_width="match_parent"
            android:textColor="@color/black"
            android:layout_height="match_parent" />

        <TableRow>

            <TextView
                android:layout_width="80dp"
                android:textColor="@color/black"
                android:text="@string/Lib1"
                android:textAlignment="center" />

            <TextView
                android:layout_width="88dp"
                android:text="@string/c1"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:text="@string/Pre1"
                android:textColor="@color/black"
                android:textAlignment="center" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="80dp"
                android:text="@string/Lib2"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:layout_width="82dp"
                android:text="@string/c2"
                android:textColor="@color/black"
                android:textAlignment="center" />

            <TextView
                android:text="@string/Pre2"
                android:textColor="@color/black"
                android:textAlignment="center" />
        </TableRow>

                android:gravity="center"
                android:textColor="@color/crim"
                android:textStyle="bold"
                android:background="@drawable/border" /> <!-- Borde para la tercera celda -->
        </TableRow>

        <!-- Aquí irán las filas de los libros (dinámicas en Java) -->

    </TableLayout>

    <!-- Totales -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp">



    </LinearLayout>

    <Button
        android:id="@+id/button4"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:backgroundTint="@color/azul"
        android:text="@string/titTable"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"

        android:layout_marginBottom="20dp" />

</LinearLayout>